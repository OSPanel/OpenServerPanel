+{
+  BOOL b, present, defaulted;
+  PACL pACL = NULL;
+  present = FALSE;
+  b = GetSecurityDescriptorDacl (sd, &present, &pACL, &defaulted);
+  if (b && present && !defaulted && pACL)
+    LocalFree (pACL);
+  LocalFree (sd);
+}
